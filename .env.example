# Environment Variables for BirthdayGen App
# Copy this file to .env and fill in your actual keys.

# OpenAI API Key
# Used for generating birthday messages (GPT-4) and images (DALL-E 3).
# Obtain from: https://platform.openai.com/api-keys
OPENAI_API_KEY="your_openai_api_key_here"

# Supabase (Database and Storage)
# Obtain from your Supabase Project Settings > API
SUPABASE_URL="your_supabase_project_url_here"
SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# Stripe (for Payments)
# Obtain from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here" # Server-side
VITE_STRIPE_PUBLIC_KEY="pk_test_your_stripe_publishable_key_here" # Client-side (Vite exposes vars prefixed with VITE_)

# Resend (for Sending Emails)
# Obtain from: https://resend.com/api-keys
# Note: Domain verification with Resend is crucial for deliverability.
RESEND_API_KEY="re_your_resend_api_key_here"

# Twilio (for Sending SMS)
# Obtain from your Twilio Console: https://www.twilio.com/console
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_PHONE_NUMBER="+1yourtwiliophonenumber" # Must be an SMS-capable Twilio number
